<Alloy>
	<Window id="player" class="container">
		<Label id="groupTextLbl"></Label>
		<Label id="audioTextLbl"></Label>
		<Button id="playPauseBtn" onClick="playtrack" >Play / Pause </Button>
		<View id="timeBar"  width="250" height="10" backgroundColor="black"  >
		<View id="timeProgress" width="1" height="10"  backgroundColor="gray" left="0" /></View>
		<Label id="duration"></Label>
		<Button id="stopBtn" onClick="stopTrack"> Stop </Button>
		<Button id="showQuestion" onClick="showQuestion"> Show Question </Button>
		<Button id="homebtn" onClick="backHome"> Home </Button>	
	</Window>
</Alloy>